<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgPosterDetailMovie"
            android:layout_height="185dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_cinema_pattern" />

        <TextView
            android:id="@+id/tvBackDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/icon_back_page"
            android:drawableTint="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDurationDetailMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="280dp"
        android:drawableLeft="@drawable/icon_clock"
        android:drawableTint="@color/choose"
        android:drawablePadding="3dp"
        android:textColor="@color/choose"
        android:text="110 minutes"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20sp"
        android:orientation="vertical"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">

        <TextView
            android:id="@+id/tvTitleDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Movies"
            android:textAllCaps="true"
            android:textColor="#E8E3E3"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGenreDetailMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/text_color_gray"
            android:text="Genre"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvNameCinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Description"
            android:textColor="#DCD5D5"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescriptionDetailMovie"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif"
            android:inputType="textMultiLine"
            android:text="Missing is a 2023 American screenlife thriller film written and directed by Will Merrick and Nick Johnson (in their feature directorial debuts) from a story by"
            android:textColor="#A8A4A4"
            android:textSize="13dp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="10dp"
        android:background="#636261" />
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7sp"
        android:orientation="vertical"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">


        <LinearLayout
             android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Release Date"
                android:textColor="#DCD5D5"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReleaseDateDetailMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="17dp"
                android:textColor="@color/text_color_gray"
                android:text="24 tháng 03 năm 2023"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Rating"
                android:textColor="#DCD5D5"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAgeRatingDetailMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="62dp"
                android:textColor="#BD3C22"
                android:text="C16 - No Children Under 16 Years Old"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Languages"
                android:textColor="#DCD5D5"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubTitleDetailMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="32dp"
                android:textColor="@color/text_color_gray"
                android:text="Phụ đề tiếng Việt"
                android:textSize="13dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Country"
                android:textColor="#DCD5D5"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCountryDetailMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="52dp"
                android:textColor="@color/text_color_gray"
                android:text="China"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="10dp"
        android:background="#636261" />
    />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7sp"
        android:orientation="vertical"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Director"
                android:textColor="#DCD5D5"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDirectorDetailMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="52dp"
                android:textColor="@color/text_color_gray"
                android:text="Nick Johnson"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Cast"
                android:textColor="#DCD5D5"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCastsDetailMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="75dp"
                android:textColor="@color/text_color_gray"
                android:text="Storm Feid, Nia Long"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="87dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBookTicketDetailMovie"
            android:layout_width="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/select_nav"
            android:text="Booking"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>