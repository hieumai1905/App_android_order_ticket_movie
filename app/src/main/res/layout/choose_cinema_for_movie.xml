<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPosterDetailMovie"
            android:layout_height="185dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_cinema_pattern" />

        <TextView
            android:id="@+id/tvBackDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/icon_back_page"
            android:drawableTint="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDurationDetailMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="330dp"

        android:background="@drawable/textview_border"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="C13"
        android:textColor="@color/red"
        android:drawablePadding="3dp"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20sp"
        android:orientation="vertical"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">

        <TextView
            android:id="@+id/tvTitleDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Movies"
            android:textAllCaps="true"
            android:textColor="#E8E3E3"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGenreDetailMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:drawablePadding="5dp"
            android:layout_marginEnd="5dp"
            android:text="110 minutes"
            android:drawableLeft="@drawable/icon_clock"
            android:drawableTint="@color/choose"
            android:textColor="@color/text_color_gray"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_option_personal_top"
        android:gravity="center"
        android:orientation="horizontal">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCinemaAll"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/select_nav"
            android:text="All"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />
        <Button
            android:id="@+id/btnCinemaHaNoi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="Hà Nội"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaHCM"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="HCM"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaDaNang"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="Đà Nẵng"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#636261" />
    />
</LinearLayout>