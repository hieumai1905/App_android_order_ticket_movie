<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unchoose">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_cinema" />

    <TextView
        android:id="@+id/tvExitLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/icon_close"
        android:drawableTint="@color/white"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_marginTop="140dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="23dp"
            android:drawableTint="@color/white"
            android:text="Account Information"
            android:textAlignment="center"
            android:textColor="#E5E9ED"
            android:textSize="28dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/selector_input"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#C5BBBB"
            android:textColorHint="#C5BBBB"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/selector_input"
            android:drawableRight="@drawable/visible_password"
            android:drawableTint="#C5BBBB"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#C5BBBB"
            android:textColorHint="#C5BBBB"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="23dp"
            android:text="Forgot Password ?"
            android:textAlignment="textEnd"
            android:textColor="@color/select_nav"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="23dp"
            android:backgroundTint="@color/select_nav"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="23dp"
            android:text="Don't Have an Account?"
            android:textAlignment="center"
            android:textColor="#C5BBBB"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnRequestRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="23dp"
            android:backgroundTint="#474444"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="15dp" />

    </LinearLayout>
</RelativeLayout>