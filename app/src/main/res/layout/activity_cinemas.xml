<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBackCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/icon_back_page"
        android:drawableTint="@color/white" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Cinemas"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_option_personal_top"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCinemaAll"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/select_nav"
            android:text="All"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />
        <Button
            android:id="@+id/btnCinemaHaNoi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="Hà Nội"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaHCM"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="HCM"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaDaNang"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="Đà Nẵng"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvCinema"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

    </ListView>

</LinearLayout>