<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPosterDetailMovie"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_cinema_template" />

        <TextView
            android:id="@+id/tvBackDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/icon_back_page"
            android:drawableTint="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-65dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCinemaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="Name Cinema"
            android:textColor="#DCD5D5"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCinemaAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/icon_place"
            android:drawablePadding="10dp"
            android:drawableTint="#A8A1A0"
            android:text="Address cinema"
            android:textColor="@color/text_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvCinemaPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/icon_call"
            android:drawablePadding="10dp"
            android:drawableTint="@color/select_nav"
            android:text="Call"
            android:textColor="@color/select_nav"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#636261" />
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCinemaAll"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/select_nav"
            android:text="23-T5"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaHaNoi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="24-T6"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaHCM"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="25-T7"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnCinemaDaNang"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="4sp"
            android:backgroundTint="@color/unchoose"
            android:text="26-CN"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#636261" />
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMovieInCinema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>